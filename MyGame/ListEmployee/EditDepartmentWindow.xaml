<Window x:Class="ListEmployee.EditDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListEmployee"
        mc:Ignorable="d"
        Title="EditDepartmentWindow" Height="170" Width="420" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="nameTextBox" Width="300"/>
        </StackPanel>
        <Button IsDefault="True" Content="Ok" Click="saveButton_Click" Width="100" Height="30" Grid.Row="1"/>
        <Button IsCancel="True" Content="Отмена" Click="cancelButton_Click" Width="100" Height="30" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
