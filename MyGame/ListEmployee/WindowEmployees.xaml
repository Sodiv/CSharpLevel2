<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListEmployee"
        xmlns:Classes="clr-namespace:ListEmployee.Classes" x:Class="ListEmployee.WindowEmployees"
        mc:Ignorable="d"
        Title="WindowEmployees" Height="450" Width="345">
    <Grid>
        <StackPanel DataContext="{Binding SelectedEmployee}">
            <TextBlock Text="Имя:" FontWeight="Bold"/>
            <TextBox x:Name="tbName" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Возраст:" FontWeight="Bold"/>
            <TextBox x:Name="tbAge" Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Отдел:" FontWeight="Bold"/>
            <TextBox x:Name="tbDepartment" Text="{Binding Department, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>        
    </Grid>
</Window>
